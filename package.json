{
  "name": "ahaan-thai-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for APIs by ahaan-thai.de",
  "type": "module",
  "main": "dictionary-server.js",
  "bin": {
    "ahaan-thai-mcp-server": "./dictionary-server.js"
  },
  "scripts": {
    "claude": "npx @anthropic-ai/claude-code",
    "dev:book-info": "node --inspect book-info-server.js",
    "dev:dictionary": "node --inspect dictionary-server.js",
    "dev:library": "node --inspect library-server.js",
    "inspect:book-info": "npx @modelcontextprotocol/inspector bash ./run-book-info-server.sh",
    "inspect:dictionary": "npx @modelcontextprotocol/inspector bash ./run-dictionary-server.sh",
    "inspect:library": "npx @modelcontextprotocol/inspector bash ./run-library-server.sh",
    "start:book-info": "node book-info-server.js",
    "start:dictionary": "node dictionary-server.js",
    "start:library": "node library-server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "node-fetch": "^3.3.2"
  },
  "keywords": [
    "mcp",
    "thai-food",
    "dictionary",
    "translation",
    "cooking",
    "cookbooks"
  ],
  "author": "Der Reiskoch",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
